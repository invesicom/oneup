import { Icon } from 'astro-icon';
import Picture from '~/components/core/Picture.astro';
---

<section class="relative lg:min-h-[1000px] pt-36 pb-10 sm:pt-32 sm:pb-16 lg:pb-24">
    <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8 relative z-20">
        <div class="max-w-2xl mx-auto text-center">
            <h1 class="text-2xl font-bold">Multi-channel digital marketing from an award-winning, certified, PPC partner agency.</h1>
            <p class="mt-5">But who cares? We're a group of PPC experts with a focus on helping businesses big and small, local or national find digital marketing success in more ways than one.</p>

            <a href="#" title="" class="inline-flex items-center px-6 py-3 mt-8 font-semibold text-white text-sm transition-all duration-200 bg-blue-600 rounded-md sm:mt-16 hover:bg-blue-700 focus:bg-blue-700" role="button">
                Apply for free
                <svg class="w-5 h-5 ml-8 -mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
